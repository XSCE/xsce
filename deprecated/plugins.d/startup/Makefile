install:

	install -D files/xs-setup-64.conf  $(DESTDIR)/etc/xs-setup.conf
	install -D files/hosts.in  $(DESTDIR)/etc/hosts.in
	install -D files/motd.in  $(DESTDIR)/etc/motd.in
	install -D files/motd.olpc.in  $(DESTDIR)/etc/motd.olpc.in
	install -D files/rc.local  $(DESTDIR)/etc/rc.d/rc.local
	install -D files/rssh.conf.in  $(DESTDIR)/etc/rssh.conf.in
	install -D files/rsyslog.conf.in  $(DESTDIR)/etc/rsyslog.conf.in
	install -D files/sshd_config.in  $(DESTDIR)/etc/ssh/sshd_config.in
	install -D files/dhcpd-ts.conf.in  $(DESTDIR)/etc/dhcp/dhcpd-ts.conf.in
	install -D files/hostapd.conf.in  $(DESTDIR)/etc/hostapd/hostapd.conf.in
	install -D files/avahi-daemon.conf.in  $(DESTDIR)/etc/avahi/avahi-daemon.conf.in
	install -D files/init.in  $(DESTDIR)/etc/sysconfig/init.in
	install -D files/pcspkr.modules  $(DESTDIR)/etc/sysconfig/modules/pcspkr.modules
	install -D files/sysctl.conf.in  $(DESTDIR)/etc/sysctl.conf.in
	install -D files/bootstrap-xo  $(DESTDIR)/usr/bin/bootstrap-xo
	install -D files/bootstrap-ts  $(DESTDIR)/usr/bin/bootstrap-ts
	install -D files/cat-parts  $(DESTDIR)/usr/bin/cat-parts
	install -D files/prep-storage.sh  $(DESTDIR)/usr/bin/prep-storage.sh
	install -D files/prep-storage-xo1.sh  $(DESTDIR)/usr/bin/prep-storage-xo1.sh
	install -D files/xs-mkaccount  $(DESTDIR)/usr/bin/xs-mkaccount
	install -D files/xs-services-check  $(DESTDIR)/usr/bin/xs-services-check
	install -D files/xs-setup  $(DESTDIR)/usr/bin/xs-setup
	install -D files/xs-setup-functions  $(DESTDIR)/usr/bin/xs-setup-functions
	install -D files/xs-enable  $(DESTDIR)/usr/bin/xs-enable
	install -D files/xs-disable  $(DESTDIR)/usr/bin/xs-disable
	install -D files/xs-update  $(DESTDIR)/usr/bin/xs-update
	install -D files/bashrc_xs.sh  $(DESTDIR)/usr/share/xs-config/cfg/etc/profile.d/bashrc_xs.sh
	install -D files/xs-setup.conf  $(DESTDIR)/usr/share/xs-config/cfg/etc/xs-setup.conf
