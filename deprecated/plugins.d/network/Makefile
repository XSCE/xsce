install:

	install -D files/resolv.conf.in  $(DESTDIR)/etc/resolv.conf.in
	install -D files/dhclient-hostname.conf.in  $(DESTDIR)/usr/share/xs-config/cfg/etc/dhclient-hostname.conf.in
	install -D files/ip6tables-config.in  $(DESTDIR)/etc/sysconfig/ip6tables-config.in
	install -D files/iptables-config.in  $(DESTDIR)/etc/sysconfig/iptables-config.in
	install -D files/network.in  $(DESTDIR)/etc/sysconfig/network.in
	install -D files/ip6tables-xs.in  $(DESTDIR)/etc/sysconfig/olpc-scripts/ip6tables-xs.in
	install -D files/iptables-xs.in  $(DESTDIR)/etc/sysconfig/olpc-scripts/iptables-xs.in
	install -D files/resolv.conf.in  $(DESTDIR)/etc/sysconfig/olpc-scripts/resolv.conf.in
	install -D files/dhclient  $(DESTDIR)/usr/share/xs-config/cfg/etc/dhcp/dhclient
	install -D files/xs-domain-config  $(DESTDIR)/usr/bin/xs-domain-config
	install -D files/xs-gen-iptables  $(DESTDIR)/usr/bin/xs-gen-iptables
	install -D files/xs-resolvconf  $(DESTDIR)/usr/bin/xs-resolvconf
	install -D files/xs-setup-network  $(DESTDIR)/usr/bin/xs-setup-network
	install -D files/xs-swapnics  $(DESTDIR)/usr/bin/xs-swapnics
	install -D files/10-olpc-net.rules  $(DESTDIR)/usr/lib/udev/rules.d/10-olpc-net.rules
	install -D files/dhclient-exit-hooks  $(DESTDIR)/usr/share/xs-config/cfg/etc/dhcp/dhclient-exit-hooks
	install -D files/dhcp  $(DESTDIR)/usr/share/xs-config/cfg/etc/NetworkManager/system-connections/dhcp
	install -D files/eth0-wireless  $(DESTDIR)/usr/share/xs-config/cfg/etc/NetworkManager/system-connections/eth0-wireless
	install -D files/eth0-wireless-lan  $(DESTDIR)/usr/share/xs-config/cfg/etc/NetworkManager/system-connections/eth0-wireless-lan
	install -D files/wireless-lan  $(DESTDIR)/usr/share/xs-config/cfg/etc/NetworkManager/system-connections/wireless-lan
	install -D files/static  $(DESTDIR)/usr/share/xs-config/cfg/etc/NetworkManager/system-connections/static
	install -D files/iptables.service  $(DESTDIR)/usr/share/xs-config/cfg/etc/systemd/system/iptables.service
	install -D files/cnt_interface_info.php  $(DESTDIR)/usr/share/xs-config/cfg/html/top/es/cnt_interface_info.php
	install -D files/cnt_net-config.php  $(DESTDIR)/usr/share/xs-config/cfg/html/top/es/cnt_net-config.php
	install -D files/lan_setup.php  $(DESTDIR)/usr/share/xs-config/cfg/html/top/lan_setup.php
