# Generated by XSCE
{% if xsce_lan_iface == "br0" %}
DEVICE=br0
TYPE=Bridge

{% else %}
DEVICE={{ xsce_lan_iface }}
TYPE=Ethernet
HWADDR={{ hostvars[inventory_hostname]['ansible_' + xsce_lan_iface]['macaddress'] }}
NM_CONTROLLED=yes

{% endif %}
BOOTPROTO=none
ONBOOT=yes
DHCPCLASS=
IPADDR={{ lan_ip }}
NETMASK={{ lan_netmask }}
DNS1=127.0.0.1
DOMAIN={{ xsce_domain }}
