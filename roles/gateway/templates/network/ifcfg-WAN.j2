TYPE="Ethernet"
DEFROUTE="yes"
IPV4_FAILURE_FATAL="no"
IPV6INIT="yes"
IPV6_AUTOCONF="yes"
IPV6_DEFROUTE="yes"
IPV6_PEERDNS="yes"
IPV6_PEERROUTES="yes"
IPV6_FAILURE_FATAL="no"
ONBOOT="yes"
PEERROUTES="yes"
# only use local nameserver
PEERDNS="no"

{% if wan_ip == "dhcp" %}
BOOTPROTO="dhcp"

{% else %}
IPADDR="{{ wan_ip }}"
NETMASK="{{ wan_netmask }}"
GATEWAY="{{ wan_gateway }}"
PREFIX=
{% endif %}

DEVICE="{{ xsce_wan_iface }}"
HWADDR="{{ hostvars[inventory_hostname]['ansible_' + xsce_wan_iface]['macaddress'] }}"
