[Unit]
Description=Provides the kalite Server
After=syslog.target network.target local-fs.target

[Service]
Type=forking
Environment="KALITE_HOME={{ kalite_root }}"
ExecStart={{ ka_prefix }}/bin/kalite start {{ job_scheduler_stanza }}--port={{ kalite_server_port }}
ExecStop={{ ka_prefix }}/bin/kalite stop
TimeoutStartSec=900

[Install]
WantedBy=multi-user.target
